{% extends 'base.html.twig' %}

{% block body %}

<div class="hero-scene text-center text-white">
    <div class="hero-scene-content">
        <h1>Connexion</h1>
    </div>
</div>

<div class="container">
    
        <form id="signinForm">
            <div class="mb-3">
              <label for="EmailInput" class="form-label">Email</label>
              <input type="email" class="form-control" id="EmailInput" placeholder="test@mail.fr" name="Email">
              <div class="invalid-feedback">
                le mail et le mot de passe ne correspond pas
              </div> 
            </div>

            <div class="mb-3">
              <label for="PasswordInput" class="form-label">Mot de passe</label>
              <input type="password" class="form-control" id="PasswordInput" name="Password">
            </div>

            <div class="text-center">
                <button type="button" class="btn btn-primary" id="btnSignin">Connexion</button>
            </div>
        </form>
    </div>

    <div class="mb-3">
      <div class="text-center pt-3">
        <a href="/signup">Vous n’avez pas de compte ? Inscrivez-vous ici !</a>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/signin.js') }}"></script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}

<div class="hero-scene text-center text-white">
        <div class="hero-scene-content">
            <h1>Administrateur</h1>
        </div>
    </div>

    
<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="secondary">  
    <div class="container-fluid">
        
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
              </button>                          
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                        <a href="/signup2" class="btn btn-primary">Nouvelle inscription!</a>
                      </li>

                      <li class="nav-item">
                        <a class="nav-link" href="/abonees">Espace abonees</a>
                      </li>

                      <li class="nav-item">
                        <a href="/suspendu" class="nav-link">Suspenssion de compte</a>
                      </li>
                    </ul>
                  </div>
                </div>
              </nav>

          

    <!-- Dashboard en temps réel -->
    <div id="adminDashboard" class="container mt-4">
        <!-- Contenu généré dynamiquement -->
    </div>

    <!-- Notifications -->
    <div id="notificationsContainer" class="container mt-3">
        <!-- Notifications dynamiques -->
    </div>

    <!-- Section Graphiques -->
    <div class="container mt-5">
        <div class="row">
            <!-- Graphique 1: Covoiturages par jour -->
            <div class="col-xl-6 col-lg-12 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-car-side me-2"></i>
                            Covoiturages par Jour
                        </h5>
                        <span class="badge bg-light text-primary" id="statsTrajetsSemaine">0</span>
                    </div>
                    <div class="card-body">
                        <canvas id="covoiturageChart" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Graphique 2: Frais administratifs -->
            <div class="col-xl-6 col-lg-12 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-coins me-2"></i>
                            Frais Administratifs
                        </h5>
                        <span class="badge bg-light text-success" id="statsFraisTotal">0</span>
                    </div>
                    <div class="card-body">
                        <canvas id="fraisAdminChart" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Graphique 3: Évolution des crédits admin -->
            <div class="col-xl-6 col-lg-12 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            Évolution des Crédits
                        </h5>
                        <span class="badge bg-light text-info" id="statsSoldeActuel">0</span>
                    </div>
                    <div class="card-body">
                        <canvas id="creditsEvolutionChart" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Graphique 4: Répartition des participants -->
            <div class="col-xl-6 col-lg-12 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users me-2"></i>
                            Répartition Participants
                        </h5>
                        <span class="badge bg-light text-warning" id="statsTotalParticipants">0</span>
                    </div>
                    <div class="card-body">
                        <canvas id="participantsChart" height="250"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques détaillées -->
    <div class="container mt-4 mb-5">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-bar me-2"></i>
                            Statistiques Détaillées
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center" id="statsContainer">
                            <!-- Statistiques chargées dynamiquement -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/administrateur.js') }}"></script>
{% endblock %}